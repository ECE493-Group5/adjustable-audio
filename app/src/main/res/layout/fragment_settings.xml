<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/presetTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/title_preset"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/presetSpinner"
        app:layout_constraintEnd_toStartOf="@+id/presetSpinner"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/presetSpinner"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:entries="@array/presetType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toEndOf="@+id/presetTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/presetDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/presetSpinner" />

    <TextView
        android:id="@+id/equalizerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/title_equalizer"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/presetDivider" />

    <TableLayout
        android:id="@+id/equalizerTableLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equalizerTitle">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/equalizer_band_min_height">

            <TextView
                android:id="@+id/equalizerBandTitle1"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_title_weight"
                android:gravity="center"
                android:text="@string/title_band_32"
                android:textAlignment="center"
                android:textSize="14sp" />

            <SeekBar
                android:id="@+id/equalizerBandSeekbar1"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_seekbar_weight" />

            <TextView
                android:id="@+id/equalizerBandValue1"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_value_weight"
                android:gravity="center"
                android:text="+4.0"
                android:textAlignment="center"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/equalizer_band_min_height">

            <TextView
                android:id="@+id/equalizerBandTitle2"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_title_weight"
                android:gravity="center"
                android:text="@string/title_band_32"
                android:textAlignment="center"
                android:textSize="14sp" />

            <SeekBar
                android:id="@+id/equalizerBandSeekbar2"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_seekbar_weight" />

            <TextView
                android:id="@+id/equalizerBandValue2"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_value_weight"
                android:gravity="center"
                android:text="+4.0"
                android:textAlignment="center"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/equalizer_band_min_height">

            <TextView
                android:id="@+id/equalizerBandTitle3"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_title_weight"
                android:gravity="center"
                android:text="@string/title_band_32"
                android:textAlignment="center"
                android:textSize="14sp" />

            <SeekBar
                android:id="@+id/equalizerBandSeekbar3"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_seekbar_weight" />

            <TextView
                android:id="@+id/equalizerBandValue3"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_value_weight"
                android:gravity="center"
                android:text="+4.0"
                android:textAlignment="center"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/equalizer_band_min_height">

            <TextView
                android:id="@+id/equalizerBandTitle4"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_title_weight"
                android:gravity="center"
                android:text="@string/title_band_32"
                android:textAlignment="center"
                android:textSize="14sp" />

            <SeekBar
                android:id="@+id/equalizerBandSeekbar4"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_seekbar_weight" />

            <TextView
                android:id="@+id/equalizerBandValue4"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_value_weight"
                android:gravity="center"
                android:text="+4.0"
                android:textAlignment="center"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/equalizer_band_min_height">

            <TextView
                android:id="@+id/equalizerBandTitle5"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_title_weight"
                android:gravity="center"
                android:text="@string/title_band_32"
                android:textAlignment="center"
                android:textSize="14sp" />

            <SeekBar
                android:id="@+id/equalizerBandSeekbar5"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_seekbar_weight" />

            <TextView
                android:id="@+id/equalizerBandValue5"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_value_weight"
                android:gravity="center"
                android:text="+4.0"
                android:textAlignment="center"
                android:textSize="14sp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/volumeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/title_volume"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equalizerTableLayout" />

    <TableLayout
        android:id="@+id/volumeTableLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/volumeTitle">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/equalizer_band_min_height">

            <TextView
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_title_weight"
                android:gravity="center"
                android:text="@string/title_global"
                android:textAlignment="center"
                android:textSize="14sp" />

            <SeekBar
                android:id="@+id/globalVolumeSeekbar"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_seekbar_weight" />

            <TextView
                android:id="@+id/globalVolumeValue"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_value_weight"
                android:gravity="center"
                android:text="50%"
                android:textAlignment="center"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/equalizer_band_min_height">

            <TextView
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_title_weight"
                android:gravity="center"
                android:text="@string/title_left"
                android:textAlignment="center"
                android:textSize="14sp" />

            <SeekBar
                android:id="@+id/leftVolumeSeekbar"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_seekbar_weight" />

            <TextView
                android:id="@+id/leftVolumeValue"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_value_weight"
                android:gravity="center"
                android:text="33%"
                android:textAlignment="center"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/equalizer_band_min_height">

            <TextView
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_title_weight"
                android:gravity="center"
                android:text="@string/title_right"
                android:textAlignment="center"
                android:textSize="14sp" />

            <SeekBar
                android:id="@+id/rightVolumeSeekbar"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_seekbar_weight" />

            <TextView
                android:id="@+id/rightVolumeValue"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/equalizer_band_value_weight"
                android:gravity="center"
                android:text="66%"
                android:textAlignment="center"
                android:textSize="14sp" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>